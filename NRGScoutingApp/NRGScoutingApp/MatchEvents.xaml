<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="NRGScoutingApp.MatchEvents"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             Icon="ic_edit.png"
             ios:Title="Match Events"
             ios:Page.UseSafeArea="true"
             ios:NavigationPage.PrefersLargeTitles="true">
    
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Update List of Events (can do during match)" Clicked="Handle_Clicked"/>
            <ListView x:Name="listView" Margin="0,10,10,10">
                <ListView.ItemTemplate>
                  <DataTemplate>
                    <ViewCell>
                        <ContentView Margin="0">
                                <ContentView.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Handle_Tapped"
                                                          NumberOfTapsRequired="2"/>
                                </ContentView.GestureRecognizers>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="3*" />
                                   </Grid.ColumnDefinitions>
                                    <Image 
                                        Grid.RowSpan="2" 
                                        Grid.Column="0"
                                        Source="ic_picked_cube_yellow.png"/>
                                    <Label Text="{Binding Path=Key}"
                                           x:Name="key"
                                           Grid.Row="0" 
                                           Grid.Column="1"
                                           HorizontalTextAlignment="End"/>
                                    <Label Text="{Binding Path=Value}"
                                           x:Name="value"
                                           Grid.Row="1" 
                                           Grid.Column="1"
                                           HorizontalTextAlignment="End"/>
                                    </Grid>
                        </ContentView>
                      </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
                    
            </StackLayout>
    </ContentPage.Content>
</ContentPage>

