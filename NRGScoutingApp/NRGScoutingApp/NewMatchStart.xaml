<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="NRGScoutingApp.NewMatchStart"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true"
             ios:Title="Match Timer"
             Icon="ic_timer.png"
             ios:NavigationPage.PrefersLargeTitles="true">
    <ContentPage.ToolbarItems> 
    <!--<ToolbarItem  Icon="plus.png" Clicked="New_Clicked"/>
<ToolbarItem Icon="web.png" Clicked="Handle_Clicked"/> 
    <ToolbarItem  Text="NRG Scouting"/>-->
</ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView HorizontalOptions="CenterAndExpand">
                   <StackLayout HorizontalOptions="CenterAndExpand">
            
          <Label 
            Text="0:00.00"
            x:Name="timerValue"
            VerticalOptions="Start" 
            HorizontalOptions="Center" 
            TextColor="#fdad13" 
            FontSize="60"
            Margin="0,20,0,10"/>
            <!--<Label x:Name="testLabel" Text=" Unstarted"/>-->
        <Slider 
            x:Name="timeSlider"
            Maximum="150000"
            ValueChanged="timerValueChanged"
            Margin="20,5,20,5"
            Minimum="0"/>
        <FlexLayout 
            Direction="Row"
            AlignItems="Center"
            JustifyContent="Center">
                <Frame BackgroundColor="#fdad13"
                       HasShadow="false"
                      Padding="10,2"
                       CornerRadius="7"
                       Margin="0,0,10,5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="resetClicked"/>
                    </Frame.GestureRecognizers>
            <StackLayout Spacing="-25">
                    <Image Source="ic_exchange.png" Scale=".5" Margin="0"/>
                <Button
                    x:Name="resetTimer"
                    Text="Reset Timer"
                    FontSize="15"
                    Margin="0,11"
                    TextColor="White"
                    BackgroundColor="#fdad13"
                    />
                </StackLayout>
                    </Frame>
                    <Frame BackgroundColor="#fdad13"
                           HasShadow="false"
                           CornerRadius="7"
                           Padding="50,2"
                           Margin="5,0,10,5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="startClicked"/>
                    </Frame.GestureRecognizers>
            <StackLayout Spacing="-25">
                <Image Source="ic_timer_large.png" Scale=".5"/>
                <Button
                    x:Name="startTimer"
                    Text="Start Timer"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Clicked="startClicked"
                    TextColor="White"
                    FontSize="15"
                    BackgroundColor="#fdad13" 
                    Margin="0,11"/>
                   </StackLayout>
                    </Frame>
                </FlexLayout>
                <FlexLayout 
                Direction="Row"
                AlignItems="Center"
                    JustifyContent="Center">
                <Frame BackgroundColor="#fdad13"
                       HasShadow="false"
                      Padding="10,2"
                       CornerRadius="7"
                       Margin="0,0,10,5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="climbClicked"/>
                    </Frame.GestureRecognizers>
            <StackLayout Spacing="-25">
                    <Image Source="ic_climb.png" Scale=".5">
                    </Image>
                <Button 
                    x:Name="climbStart"
                    Text="Climb Start"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Clicked="climbClicked"
                    FontSize="15"
                    TextColor="White"
                            Margin="0,11"
                        BackgroundColor="#fdad13" />
                    </StackLayout>
                </Frame>
                
                 <Frame BackgroundColor="#fdad13"
                       HasShadow="false"
                      Padding="50,2"
                        CornerRadius="7"
                       Margin="5,0,0,5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="cubeClicked"/>
                    </Frame.GestureRecognizers>
            <StackLayout Spacing="-26"
                         HorizontalOptions="CenterAndExpand">
                        <Image Source="ic_picked_cube.png"
                               Scale=".5">
                        </Image>
                    <Button
                    x:Name="cubePicked"
                    Text="Cube Picked"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Clicked="cubeClicked"
                    FontSize="15"
                    TextColor="White" 
                  Margin="0,11"
                        BackgroundColor="#fdad13" />
                    </StackLayout>
                </Frame>
      </FlexLayout>
  </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>

